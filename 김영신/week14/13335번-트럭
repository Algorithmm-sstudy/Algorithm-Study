#include <iostream>
#include <queue>

using namespace std;

int main() {
    queue<int> q;
    queue<int> bridge;

    int n, w, l;
    cin >> n >> w >> l;

    int a;
    int time = 0, cnt = 0; // time : 총 걸린 시간, cnt = 서브 큐에 있는 총 하중

    while (n--) {
        cin >> a;
        q.push(a);
    }
    while (w--) {
        bridge.push(0);
    }
    while (!q.empty() || cnt != 0) {
        time++;
        if (!q.empty() && cnt == 0) {
            bridge.push(q.front());
            cnt += q.front();
            q.pop();
            cnt -= bridge.front();
            bridge.pop();
        }
        else {

            cnt -= bridge.front();
            bridge.pop();

            if (!q.empty() && cnt + q.front() <= l) {
                bridge.push(q.front());
                cnt += q.front();
                q.pop();
                
            }
            else bridge.push(0);

        }
    }
    cout << time;
}
