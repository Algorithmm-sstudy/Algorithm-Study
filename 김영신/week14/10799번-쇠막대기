#include <iostream>
#include  <stack>

using namespace std;

int main() {
    stack<char> st;
    string s;
    cin >> s;

    int cnt = 0;
    for (int i =0; i<s.size(); i++) {
        if (s[i] == '(') {
            st.push('(');
        }
        else {
            if (s[i-1] == '(' && i > 0) {
                st.pop();
                cnt += st.size();
            }
            else { // 레이저가 아니라 막대기라면
                st.pop();
                cnt++;
            }
        }
    }
    cout << cnt;

}
