#include <iostream>
#include <algorithm>
using namespace std;

int main() {
	long long n;
	cin >> n;
	long long* client = new long long[n];
	for (int i = 0; i < n; i++) {
		cin >> client[i];
	}
	sort(client, client + n, greater<long long>());

	long long total = 0;
	for (int i = 0; i < n; i++) {
		long long tip = client[i] - i;
		if (tip > 0) total += tip;
	}
	cout << total;
}
