#include <iostream>
using namespace std;

int main() {

	int n;
	cin >> n;

	int arr[99];
	for (int i = 0; i < 98; i++) {
		arr[i] = -1;
	}

	int cow, dir;
	int count = 0;
	for (int j = 0; j < n; j++) {
		cin >> cow >> dir;
		if (arr[cow - 1] == -1) {
			arr[cow - 1] = dir;
		}
		else if (arr[cow - 1] == dir) {
			continue;
		}
		else if (arr[cow - 1] == 1 && dir == 0) {
			arr[cow - 1] = dir;
			count++;
		}
		else if (arr[cow - 1] == 0 && dir == 1) {
			arr[cow - 1] = dir;
			count++;
		}
	}
	cout << count;
}

